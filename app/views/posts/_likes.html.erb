<% if user_signed_in? && current_user.likes?(@post) %>
<%= link_to (fa_icon "heart", text: 'Unlike'), post_like_path(@post) ,class: 'card-link', method: :delete, remote: true %>

<% else %>
  <%= link_to (fa_icon "heart"), post_like_path(@post) ,class: 'card-link', method: :post, remote: true %>
<% end %>
